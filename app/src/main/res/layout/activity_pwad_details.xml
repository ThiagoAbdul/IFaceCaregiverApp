<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.PwadDetailsActivity">

    <TextView

        android:id="@+id/tv_pwad_details_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_copy_careful_token"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:text="Copy careful token"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwad_details_name" />

    <Button
        android:id="@+id/btn_pwad_known_persons"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:text="View known persons"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_copy_careful_token" />

    <Button
        android:id="@+id/btn_add_known_person"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pwad_known_persons"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:text="Add known person" />

</androidx.constraintlayout.widget.ConstraintLayout>