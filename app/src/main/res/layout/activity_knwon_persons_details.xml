<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.KnownPersonsDetailsActivity">

    <TextView
        android:id="@+id/tv_kwnown_person_details_name"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKnownPersonDetailsAddImage"
        android:layout_width="0dp"
        android:layout_height="@dimen/form_control_height"
        app:layout_constraintTop_toBottomOf="@+id/tv_kwnown_person_details_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:text="Adicionar foto"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>